#
# The default server
#
server {
    listen       80 default_server;
    server_name  _;

    access_log  /var/log/nginx/numa08_net.access.log  main;
    error_log   /var/log/nginx/numa08_net.error.log;

    location / {
        proxy_pass   http://127.0.0.1:<%= node[:numa08][:run_port] %>;
    }

    error_page  404              /404.html;
    location = /404.html {
        root   /usr/share/nginx/html;
    }

    error_page   500 502 503 504  /50x.html;
    location = /50x.html {
        root   /usr/share/nginx/html;
    }
}